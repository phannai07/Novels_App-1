<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvHistoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: John Doe"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvHistoryPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: +123456789"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvHistoryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: 123 Street, Phnom Penh"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvHistoryOrderSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book1 x2, Book2 x1"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvHistoryAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $45.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2C8870"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-05-20 14:30"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="12dp"/>
</LinearLayout>
